{
	"compilerOptions": {
		"jsx": "react",
		"lib": ["DOM", "ES2018"],
		"target": "ES2018",
		"module": "CommonJS",
		"allowJs": false,
		"rootDir": "src",
		"outDir": "lib",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
